<h1 class="title-header text-center text-warning ">Login</h1>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row p-5 auth-div">
  <div class="form-inputs ms-3">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control col-md-6 input-width" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "form-control col-md-6 input-width" } %>
    <%= f.input :remember_me, as: :boolean, input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions ms-3 text-center">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      <%= render "devise/shared/links" %>
    </div>
    <% end %>
  </div>
