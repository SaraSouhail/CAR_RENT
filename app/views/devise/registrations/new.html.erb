<br>
<h1 class="title-header text-center text-warning ">Signup</h1>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
<div class="row p-5 auth-div">
  <div class="form-inputs ms-3">

    <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :profile_photo, as: :file %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first_name", class: 'form-control input-width' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :last_name,
                  required: true,
                  input_html: { autocomplete: "last_name", class: 'form-control input-width' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :email,
                  required: true,
                  input_html: { autocomplete: "email", class: 'form-control input-width' } %>
    </div>
  </div>

<div class="form-group">
    <div class="col-sm-10">
      <%= f.input :telephone,
                  required: true,
                  input_html: { autocomplete: "telephone", class: 'form-control input-width' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :address,
                  required: true,
                  input_html: { autocomplete: "address", class: 'form-control input-width' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :role, collection: [['Owner', 'owner'], ['Client', 'client']],
                as: :select,
                label: 'My Role',
                input_html: {  class: 'form-control input-width' }%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: 'form-control input-width' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: 'form-control input-width' } %>
    </div>
  </div>

<div>
  <div>
  <div class="form-group text-center">
    <div class="col-sm-offset-2 col-sm-10 mb-5">
      <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
