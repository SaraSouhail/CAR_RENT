        <div>
          <h3>Nom du client:</h3> <%= client.user.first_name %>
          <h3>Prénom du client:</h3> <%= client.user.last_name %>
          <h3>Email:</h3><p> <%= client.user.email %></p>
          <h3>Adresse:</h3><p> <%= client.user.address %></p>


